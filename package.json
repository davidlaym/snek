{
  "name": "snek",
  "version": "1.0.0",
  "main": "./dist/app.js",
  "license": "MIT",
  "bin": {
    "snek": "./dist/bin.js"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.4",
    "husky": "3.0.8",
    "jest": "^24.9.0",
    "jest-spec-reporter": "^1.0.8",
    "prettier": "1.18.2",
    "pretty-quick": "1.11.1",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.2"
  },
  "scripts": {
    "dev": "tsc --watch",
    "test": "jest",
    "test:detail": "jest --reporters=jest-spec-reporter",
    "test:cov": "jest --coverage",
    "checktypes": "tsc --noEmit --extendedDiagnostics"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "yarn checktypes"
    }
  },
  "dependencies": {
    "play-sound": "^1.1.3"
  }
}
